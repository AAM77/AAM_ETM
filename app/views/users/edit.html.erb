<h1>Edit Account Info</h1>

<%= form_for @user do |f| %>

  <%= f.label :name, "Name: " %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :address, "Address: " %>
  <%= f.text_field :address %>
  <br>
  <br>
  <%= f.label :telephone_num, "Telephone: " %>
  <%= f.text_field :telephone_num %>
  <br>
  <br>
  <%= f.label :email, "Email: " %>
  <%= f.text_field :email %>
  <br>
  <br>
  <%= f.submit "Update Account Details" %>

<% end %>
