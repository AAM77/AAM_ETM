<h1>All Users</h1>

<ol>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.full_name.titleize, user_path(user) %>
      <% if current_user.friends.where(id: user.id).first %>
        Your Friend
      <% else %>
        <%= link_to "|| Add Friend", friendships_path(friend_id: user), method: :post if user.id != current_user.id %>
      <% end %>
    </li>
  <% end %>
</ol>
