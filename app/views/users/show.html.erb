<h1><%= "#{@user.username}'s Homepage" %></h1>
<br>
<h3><%= "#{@user.username}'s Points: #{@user.total_points}" if @user != current_user %></h3>

<br>
<br>

<div class="container">
  <div class="row">

    <!-- If the user is friends with the current user -->
    <% if @user == current_user || @user.friend_ids_list.include?(current_user.id) %>

      <!-- List the Events the User Created -->
      <%= render layout: "card" do %>
        Events <%= @user.username %> Created
      </div>
      <ul class="list-group list-group-flush">

        <% Event.admin(@user).each do |event| %>
          <li class="list-group-item"><%= link_to event.name, user_event_path(@user, event) %></li>
        <% end %>
      <% end %>

      <!-- List the Solo Tasks the User is Participating in -->
      <%= render layout: "card" do %>
        Solo-Tasks <%= @user.username %> is Participating in
        </div>
        <ul class="list-group list-group-flush">
        <% @user.tasks.solo_tasks.not_complete.each do |solo_task| %>
          <li class="list-group-item">
            <%= task_participating_in solo_task, @user %>
          </li>
        <% end %>
      <% end %>

      <div class="w-100"></div>

      <!-- List Events that the User's friends created and that the user is participating in -->
      <%= render layout: "card" do %>
        Friends' Events <%= @user.username %> is Participating In
      </div>
      <ul class="list-group list-group-flush">
        <% Event.not_admin(@user).each do |event| %>
          <% if event.user_ids.include?(@user.id) %>
            <li class="list-group-item"><%= link_to event.name, user_event_path(event.admin_id, event) %></li>
          <% end %>
        <% end %>
      <% end %>

      <!-- List the Group Tasks the User is Participating in -->
      <%= render layout: "card" do %>
        Group Tasks <%= @user.username %> is Participating in
      </div>
      <ul class="list-group list-group-flush">
        <% @user.tasks.group_tasks.not_complete.each do |group_task| %>
          <li class="list-group-item">
            <%= task_participating_in group_task, @user %>
          </li>
        <% end %>
      <% end %>

    <% else %>

      <!-- If the user is NOT friends with the current user -->
      <!-- List the events the user created -->
      <%= render layout: "card" do %>
        Events <%= @user.username %> Created
      </div>
      <ul class="list-group list-group-flush">
        <% @adminned_events.each do |event| %>
          <li class="list-group-item"><%= link_to event.name, user_event_path(@user, event) %></li>
        <% end %>
      <% end %>

    <% end %>


  </div>

    <br>
    <br>

  <!-- when visiting a user's homepage: -->
  <!-- if it is the current user's page or the current user is friends with the user page's owner -->
  <% friends_dropdown @user do %>
    <div class="btn-group">
      <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Friends List
      </button>
      <div class="dropdown-menu scrollable-menu">
        <% @user.friendships_list.each do |friendship| %>
          <p class="dropdown-item">
            <%= friend_name(friendship, @user) %>
          </p>
          <div class="dropdown-divider"></div>
        <% end %>
      </div>
    </div>
  <% end %>

  <br>
  <br>

  <!-- An add/remove friend link on a different user's page -->
  <!-- is this necessary? -->
  <%= add_remove_friend_button @user %>

</div>
