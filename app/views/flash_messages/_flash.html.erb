<!-- FLASH MESSAGES -->

<% if flash[:success] %>
  <br>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
  <br>

<% elsif flash[:warnings] %>
  <br>
  
  <% flash[:warnings].each do |warning| %>
    <div class="alert alert-danger">
      <%= warning %>
    </div>
  <% end %>
  <br>

<% end %>

<!-- END FLASH MESSAGES -->
