<%= form_for @event do |f| %>
  <%= f.label :name, "Event Name: " %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :deadline_date, "Event Deadline (Date): " %>
  <%= f.date_field :deadline_date %>
  <br>
  <%= f.label :deadline_time, "Event Deadline (Time)" %>
  <%= f.time_field :deadline_time %>
  <br>
  <%= f.hidden_field :admin_id %>
  <br>

  <%= f.submit submit_msg, data: { confirm: "Are you sure you want to submit these changes?" }, class: "btn bg-info text-white" %>
<% end %>
