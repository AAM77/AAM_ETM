<div>
  <div class="align-top clearfix">
    <h1 class="main-header float-left"><%= event.name %></h1>
    <h2 class="sub-header float-right">Event's Admin: <%= link_to admin.username, user_path(admin) %></h2>
  </div>

  <div>
    <h6 class="sub-header">Due Date & Time</h6>
    <h6>Date: <%= event.deadline_date.strftime("%m-%d-%y") if event.deadline_date %></h6>
    <h6>Time: <%= event.deadline_time.strftime("%I:%M %p") if event.deadline_time %></h6>
  </div>
</div>

